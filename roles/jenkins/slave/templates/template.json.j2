{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "cccp-service",
    "annotations": {
      "description": "Container Pipeline Template"
    }
  },
  "labels": {
    "template": "cccp-service"
  },
  "parameters": [
    {
      "name": "SOURCE_REPOSITORY_URL",
      "description": "The URL of the repository with your application source code",
      "value": "",
      "required": true
    },
    {
      "name": "BUILD_TRIGGER_SECRET",
      "description": "A secret to be used to trigger a build via Origin API",
      "value": "secret101"
    },
{
      "name": "TARGET_REGISTRY",
      "description": "An URL of a registry where to push the final image",
      "value": "{{ public_registry }}:5000"
    },
    {
      "name": "TARGET_NAMESPACE",
      "description": "A namespace in the target registry where to push the final image",
      "value": "cccp"
    },
    {
      "name": "NOTIFY_EMAIL",
      "description": "An email id for notifying after build of final image",
      "value": ""
    },
    {
      "name": "TAG",
      "description": "Tag for the resulting image",
      "value": "cccp-python",
      "required": true
    },
    {
      "name": "REPO_BUILD_PATH",
      "description": "Path to a directory containing a Dockerfile",
      "value": "/",
      "required": true
    },
    {
      "name": "REPO_TEST_PATH",
      "description": "Path to tests in a repository",
      "value": "/tests",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "",
        "annotations": {
          "description": "Keeps track of changes in the image "
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
          "name": "build" 
      },
      "spec": {
        "triggers": [ 
          {
            "type": "Generic",
            "generic": {
              "secret": ""
            }
          }
        ],
        "source": { 
          "type": "Git",
          "git": {
            "uri": ""
          }
        },
        "strategy": { 
          "type": "Custom",
          "customStrategy": {
            "exposeDockerSocket": true,
            "from": {
              "kind": "DockerImage",
              "name": "cccp-build"
            },
            "env": [
              {
                "name": "TAG",
                "value": ":test"
              },
              {
                "name": "SOURCE_REPOSITORY_URL",
                "value": ""
              },
              {
                "name": "REPO_BUILD_PATH",
                "value": ""
              }
            ]
          }
        },
        "output": { 
          "to": {
            "kind": "ImageStreamTag",
            "name": ":test"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
          "name": "test" 
      },
      "spec": {
        "triggers": [ 
          {
            "type": "Generic",
            "generic": {
              "secret": ""
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {
              "from": {
                "kind": "ImageStreamTag",
                "name": ":test"
              }
            }
          }
        ],
        "strategy": { 
          "type": "Custom",
          "customStrategy": {
            "exposeDockerSocket": true,
            "from": {
              "kind": "DockerImage",
              "name": "cccp-test"
            },
            "env": [
              {
                "name": "FROM",
                "value": ":test"
              },
              {
                "name": "TO",
                "value": ":rc"
              },
              {
                "name": "REPO_TEST_PATH",
                "value": ""
              },
              {
                "name": "SOURCE_REPOSITORY_URL",
                "value": ""
              }

            ]
          }
        },
        "output": { 
          "to": {
            "kind": "ImageStreamTag",
            "name": ":rc"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
          "name": "delivery" 
      },
      "spec": {
        "triggers": [ 
          {
            "type": "Generic",
              "generic": {
              "secret": ""
            }
          },
          {
            "type": "ImageChange",
            "imageChange": {
              "from": {
                "kind": "ImageStreamTag",
                "name": ":rc"
              }
            }
          }
        ],
        "strategy": { 
          "type": "Custom",
          "customStrategy": {
            "exposeDockerSocket": true,
            "from": {
              "kind": "DockerImage",
              "name": "cccp-delivery"
            },
            "env": [
              {
                "name": "FROM",
                "value": ":rc"
              },
              {
                "name": "TO",
                "value": ":latest"
              },
              {
                "name": "TARGET_REGISTRY",
                "value": ""
              },
              {
                "name": "TARGET_NAMESPACE",
                "value": ""
              },
              {
                "name": "NOTIFY_EMAIL",
                "value": ""
              }
            ]
          }
        },
        "output": { 
          "to": {
            "kind": "ImageStreamTag",
            "name": ":rc"
          }
        }
      }
    }
  ]
}
